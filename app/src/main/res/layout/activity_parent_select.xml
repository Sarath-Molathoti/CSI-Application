<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ParentSelectActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to CSI"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="80dp"
        android:textStyle="bold"
        android:textColor="#009688"
        android:textSize="35dp"/>
    <Button
        android:layout_width="400dp"
        android:layout_height="65dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="5dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="Message Warden"
        android:textSize="25dp"
        android:textStyle="bold"
        android:background="#23EA2B"
        android:textColor="#DCD1D1"
        android:id="@+id/message_to_warden_btn"
        />

    <Button
        android:layout_width="400dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:text="Messages From Warden"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:background="#23EA2B"
        android:textColor="#DCD1D1"
        android:id="@+id/messages_from_warden_btn"
        />

    <Button
        android:layout_width="400dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="Message FA"
        android:textSize="25dp"
        android:textStyle="bold"
        android:background="#11E1CE"
        android:textColor="#111"
        android:id="@+id/message_to_fa_btn"
        />

    <Button
        android:layout_width="400dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:text="Messages From FA"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:background="#11E1CE"
        android:textColor="#111"
        android:id="@+id/messages_from_fa_btn"
        />


</LinearLayout>