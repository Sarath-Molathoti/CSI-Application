    <TextView
        android:id="@+id/from_text"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="dummy"
        android:textSize="22dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/to_text"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="dummy"
        android:textSize="22dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/message_text"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="dummy"
        android:textSize="22dp"
        android:textStyle="bold"
        />

</LinearLayout>